<%- include('partials/_head.ejs') %>
    <%- include('partials/leftsidebar.ejs') %>
        <%- include('partials/_header.ejs') %>
            <div class="ec-content-wrapper">
                <div class="content">
                    <div class="breadcrumb-wrapper breadcrumb-wrapper-2 breadcrumb-contacts">
                        <h1> Coupon</h1>
                        <p class="breadcrumbs"><span><a href="/">Home</a></span>
                            <span><i class="mdi mdi-chevron-right"></i></span> Coupon
                        </p>
                    </div>
                    <div class="row">
                        <div class="col-xl-4 col-lg-12">
                            <div class="ec-cat-list card card-default mb-24px">
                                <div class="card-body">
                                    <div class="ec-cat-form">
                                        <h4>Add New Coupon</h4>

                                        <form action="/admin/add-coupon" method="post" >
                                            
                                            <div class="form-group row">
                                                <label for="text" class="col-12 col-form-label">Title</label>
                                                <div class="col-12">
                                                    <input id="text" name="title" class="form-control here slug-title"
                                                        type="text" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="text" class="col-12 col-form-label">COUPON CODE</label>
                                                <div class="col-12">
                                                    <input id="text" name="code" class="form-control here slug-title"
                                                        type="text" onkeyup="this.value = this.value.toUpperCase();" required>
                                                </div>
                                            </div>
                                            <!-- <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="couponFor" id="forAll" value="For all users" checked />
                                                <label class="form-check-label" for="forAll">For all users</label>
                                              </div>
                                              &nbsp;&nbsp;&nbsp;
                                              <div class="form-check form-check-inline">
                                                <input class="form-check-input" type="radio" name="couponFor" id="forSelected" value="For selected users" />
                                                <label class="form-check-label" for="forSelected">For selected users</label>
                                              </div> -->
                                              
                                              <div class="form-group row">
                                                <label for="text" class="col-12 col-form-label">Discount Percentage</label>
                                                <div class="col-12">
                                                    <input id="text" name="percentage" class="form-control here slug-title"
                                                        type="number" required>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="text" class="col-12 col-form-label">Minimum Purchase</label>
                                                <div class="col-12">
                                                    <input id="text" name="minimum" class="form-control here slug-title"
                                                        type="number" >
                                                </div>
                                            </div>
                                            <div class="form-group row ">
                                                <label for="text" class="col-12 col-form-label">Maximum Purchase</label>
                                                <div class="col-12">
                                                    <input id="text" name="maximum" class="form-control here slug-title"
                                                        type="number" required>
                                                </div>
                                            </div>

                                            <div class="form-group row">
                                                <label class="col-12 col-form-label">Description</label>
                                                <div class="col-12">
                                                    <textarea id="fulldescription" name="description" cols="40" rows="4"
                                                        class="form-control"></textarea>
                                                </div>
                                            </div>
                                            <div class="form-group row">
                                                <label for="text" class="col-12 col-form-label">Expires on</label>
                                                <div class="col-12">
                                                    <input id="text" name="expiry" class="form-control here slug-title"
                                                        type="date" >
                                                </div>
                                            </div>



                                            <div class="row">
                                                <div class="col-12">
                                                    <button name="submit" type="submit"
                                                        class="btn btn-primary">Submit</button>
                                                </div>
                                            </div>

                                        </form>

                                    </div>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

         
            <%- include('partials/foot.ejs') %>