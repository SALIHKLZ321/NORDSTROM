        <script>
            function addToCart(prodId) {
                $.ajax({
                    url: '/add-to-cart?id=' + prodId,
                    method: 'get',
                    success: ((response) => {
                        Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: ' Item added to Cart',
                            showConfirmButton: false,
                            timer: 1500
                        })
                        console.log(response);
                        
                    })
                })
            }
            function addToWishlist(prodId){
                $.ajax({
                    url: '/add-to-wishlist?id=' + prodId,
                    method: 'get',
                    success: ((response) => {
                        if(!response.inc){
                            Swal.fire({
                            position: 'top-end',
                            icon: 'error',
                            title: ' Item Removed from Wishlist',
                            showConfirmButton: false,
                            timer: 1500
                        })
                            let count = $('#wishlist').html
                            count = parseInt(count) -1
                            $('#wishlist').html(count)
                            count = $('#wishlist1').html
                            count = parseInt(count) - 1
                            $('#wishlist1').html(count)

                        }else{
                            Swal.fire({
                            position: 'top-end',
                            icon: 'success',
                            title: ' Item added to Wishlist',
                            showConfirmButton: false,
                            timer: 1500
                        })
                            let count = $('#wishlist').html
                            count = parseInt(count) +1
                            $('#wishlist').html(count)
                            count = $('#wishlist1').html
                            count = parseInt(count) + 1
                            $('#wishlist1').html(count)

                        }
                        
                    })
                })

            }
        </script>

